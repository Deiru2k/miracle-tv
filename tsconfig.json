{
   "compilerOptions": {
       "target": "es2020",
       "module": "commonjs",
       "skipLibCheck": true,
       "lib": ["es2020"],
       "esModuleInterop": true,
       "noImplicitAny": true,
       "moduleResolution": "node",
       "resolveJsonModule": true,
       "sourceMap": false,
       "outDir": "./dist",
       "baseUrl": ".",
       "types": [],
       "typeRoots" : ["./node_modules", "./node_modules/@types"],
       "paths": {
           "miracle-tv/*": [ "src/*" ]
       }
   },
   "include": [
       "./src/**/*"
   ]
}
